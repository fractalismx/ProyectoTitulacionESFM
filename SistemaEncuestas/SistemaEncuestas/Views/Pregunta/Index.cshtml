@model IEnumerable<SistemaEncuestas.Models.Domain.Pregunta>

@{
    ViewBag.Title = "Índice";
}

<h2>Índice</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdEncuestas)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdEncuestas)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
