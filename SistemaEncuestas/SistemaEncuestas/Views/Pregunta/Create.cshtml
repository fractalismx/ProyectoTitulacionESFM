@model SistemaEncuestas.Models.Domain.Pregunta

@{
    ViewBag.Title = "Create";
}

<h2>Crear</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Pregunta</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.NombreP, new { @class = "form-label" })
            <div class="mb-3">
                @Html.EditorFor(model => model.NombreP, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NombreP, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(m => m.IdEncuestas, new { @id = "IdEncuesta" })

        <div class="form-group">
            <div class="mb-3">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "Details/" + Model.IdEncuestas, "Encuesta")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
