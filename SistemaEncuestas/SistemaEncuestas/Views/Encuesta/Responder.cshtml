@model SistemaEncuestas.Models.ViewModels.EncuestaViewModel
@{
    ViewBag.Title = "Responder";
}

<h2>Responder</h2>

@using (Html.BeginForm("Responder", "Encuesta", FormMethod.Post))
{ 
<table class="table">
    <tr>
        <th>Pregunta</th>
        <th>Respuesta</th>
    </tr>

    @Html.HiddenFor(modelItem => Model.Preguntas)
    
    @for (int i=0;i<Model.Preguntas.Count;i++)
    {
        <tr>
            <td> @Html.DisplayFor(modelItem => Model.Preguntas[i].NombreP)</td>
            <td> @Html.TextBoxFor(modelItem => Model.Respuestas[i].Nombre)</td>
            
            @Html.HiddenFor(modelItem => Model.Respuestas[i].IdPreguntas)
        </tr>
        }
</table>

    <br />
    <br />

    <div class="from-group">
        <div class="mb-3">
            <input type="submit" class="btn btn-default" value="Enviar Respuestas"/>
        </div>
    </div>
}