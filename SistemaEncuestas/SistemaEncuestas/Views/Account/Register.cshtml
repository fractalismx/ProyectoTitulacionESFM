@model SistemaEncuestas.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Cree una cuenta nueva.</h4>
    <hr />
    
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Nombre, new { @class = "form-label" })
        <div class="mb-3">
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Apellidos, new { @class = "form-label" })
        <div class="mb-3">
            @Html.TextBoxFor(m => m.Apellidos, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Genero, new { @class = "form-label" })
        <div class="mb-3">
            @*@Html.DropDownListFor(m => m.Genero, (IEnumerable<SelectListItem>)ViewBag.opciones, null, htmlAttributes: new { @class = "form-select" })*@
            @*@Html.DropDownList("Genero", (IEnumerable<SelectListItem>)ViewBag.opciones, new { @class = "form-select" })*@
            @*@Html.TextBoxFor(m => m.Genero, new { @class = "form-control" })*@
            @Html.DropDownListFor(model => model.Genero, Model.ActionsList, htmlAttributes: new { @class = "form-select" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "form-label" })
        <div class="mb-3">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "form-label" })
        <div class="mb-3">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })
        <div class="mb-3">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="mb-3">
            <input type="submit" class="btn btn-primary" value="Registrarse" />
        </div>
    </div>
}

